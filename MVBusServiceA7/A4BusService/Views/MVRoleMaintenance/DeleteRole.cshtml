@model IEnumerable<A4BusService.Models.ApplicationUser>
@{
    ViewBag.Title = "DeleteRole";
}

<h2>Delete this role?</h2>

@using (Html.BeginForm())
{
    string roleName = ViewBag.roleName;
    <form>
        @Html.Hidden("roleName")
        <input type="checkbox" name="deleteUser" /> <label>Remove all users from this role?</label><br />
        <input type="submit" value="delete" class="btn" />
    </form>
}
<br />
<table class="table">
    <tr>
        <th>User Name</th>
        <th>Email</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@item.Email</td>
        </tr>
    }

</table>
@Html.ActionLink("Back to list", "MemberList")

