@model A4BusService.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset Password for ";
}

<h2>@ViewBag.Title @ViewBag.email</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger"})

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div><br />
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div><br />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Reset Password" />
        </div>
    </div>
}

@Html.ActionLink("Go Back", "Index")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

